
.gantt-table
    background-color: white
    flex-basis: 50%
    overflow: hidden
    order 0

    .header
        background-color: white
        border 0 none
        border-bottom: 1px solid var(--border-color)
        box-sizing: border-box
        overflow: hidden

        .tr
            display: flex
            flex-direction: row
            justify-content: start

        .th
            padding 4px
            display flex
            flex-direction: column
            font-weight: bold
            height: calc(var(--row-height) * 2);
            justify-content: center

    .body
        height calc(100% - (var(--row-height) * 2))
        overflow auto

        .tr
            display: flex
            flex-direction: row
            justify-content: start

        .td
            padding: 4px
            display: flex
            flex-direction: column
            justify-content: center
